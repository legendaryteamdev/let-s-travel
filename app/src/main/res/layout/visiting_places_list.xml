<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/colorWhite"
        android:layout_marginRight="16dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView android:layout_width="240dp"
                   android:layout_height="120dp"
                   android:src="@drawable/kdat"
                   android:scaleType="centerCrop"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:id="@+id/visiting_place_img"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:id="@+id/visiting_detail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="No data"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/visiting_place_img"
                app:layout_constraintTop_toBottomOf="@+id/visiting_place_img"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="10dp"/>

        <RatingBar android:layout_width="wrap_content"
                   android:layout_height="15dp"
                   style="@android:style/Widget.Material.RatingBar.Small"
                   android:numStars="5"
                   android:progressTint="@color/colorOrange"
                   android:progressBackgroundTint="@color/colorDarkGray"
                   android:isIndicator="true"
                   android:rating="3.5"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="8dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="8dp"
                   app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintTop_toBottomOf="@+id/visiting_detail_txt"
                   android:layout_marginTop="4dp"
                   android:layout_marginBottom="8dp"
                   app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/ic_favorite"
                   app:layout_constraintStart_toEndOf="@+id/visiting_detail_txt"
                   android:layout_marginStart="8dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="8dp"
                   android:layout_marginBottom="8dp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="8dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintHorizontal_bias="0.942"
                   app:layout_constraintVertical_bias="0.859"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>